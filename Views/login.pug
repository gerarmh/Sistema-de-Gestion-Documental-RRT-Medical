doctype html
html
    head
        meta(charset="utf-8")
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        title="Login"
        link(rel="shortcut icon", href="images/pestaña.png")
        link(rel="stylesheet", type="text/css", href="../views/styles/style.css")
        <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,200;0,400;0,500;0,600;1,200&display=swap" rel="stylesheet">
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,200;0,400;0,500;0,600;1,200&family=Nunito:wght@900&display=swap" rel="stylesheet">
    body
        //----NAV BAR -----
        nav(class="login-navbar")
            div(id="login-logo")
                a(href="index.html") 
                    img(src="images/logo.png" class="login-logo")
        header(class="login-header")
            div(class="wrapper")
                div(class="form-box login")
                    h2 Ingresa tus datos
                    div(class="line")
                    form(action="#")
                        div(class="input-box")
                            span(class="icon")
                                ion-icon(name="mail")
                            input(type="email", required)
                            label Correo
                        div(class="input-box")
                            span(class="icon")
                                ion-icon(name="lock-closed")
                            input(type="password", required)
                            label Contraseña
                        div(class="remember-forgot")
                            <label><input type="checkbox"> Recordarme</label>
                            a(href="#") ¿Olvidaste tu contraseña?
                        button(type="submit" class="btn") Iniciar sesión
                        //div(class="login-register")
                        //    p ¿No tienes una cuenta?
                        //        a(href="#", class="register-link")  Registrarse
        //section
        //    div(class="title")
        //        h1 Upcoming Events
        //        div(class="line")
        include footer.html
        script(type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js")
        script(nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js")